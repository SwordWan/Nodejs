    <table width="100%" border="0" cellpadding="8" cellspacing="0" class="tableBasic">
		<tr>
			<td  width="90" align="right">uid</td>
			<td align="right"><input type="text" name="uid" id="uid" value="{{row.uid}}" size="50" class="inpMain" /></td>
		</tr>
		<tr>
			<td  width="90" align="right">sender</td>
			<td align="right"><input type="text" name="sender" id="sender" value="{{row.sender}}" size="50" class="inpMain" /></td>
		</tr>
		<tr>
			<td  width="90" align="right">golds</td>
			<td align="right"><input type="text" name="golds" id="golds" value="{{row.golds}}" size="50" class="inpMain" /></td>
		</tr>
		<tr>
			<td  width="90" align="right">ctime</td>
			<td align="right"><input type="text" name="ctime" id="ctime" value="{{row.ctime}}" size="50" class="inpMain" /></td>
		</tr>
		<tr>
			<td  width="90" align="right">recver</td>
			<td align="right"><input type="text" name="recver" id="recver" value="{{row.recver}}" size="50" class="inpMain" /></td>
		</tr>
		<tr>
			<td  width="90" align="right">clubid</td>
			<td align="right"><input type="text" name="clubid" id="clubid" value="{{row.clubid}}" size="50" class="inpMain" /></td>
		</tr>
		<tr>
			<td  width="90" align="right">ymd</td>
			<td align="right"><input type="text" name="ymd" id="ymd" value="{{row.ymd}}" size="50" class="inpMain" /></td>
		</tr>
		<tr>
			<td>&nbps;</td>
			<td align="right"><input name="submit" id="submit" class="btn" type="button" value="提交" /></td>
		</tr>
    </table>
</form>
<script>
    var edit = {{ edit }};
    var url = '{{posturl}}';
    $("#submit").click(function () {
        var e = false;
        var o = $("form").serializeJson();
        do {
            if (!edit) {

            }

            if (e) {
                break;
            }
            $.ajax({
                url: url,
                method: 'POST',
                dataType: 'json',
                data: o,
                error: function () { },
                success: function (response) {
                    $("#err_total").text(response.errmsg).show();
                }
            })
        } while (false);
    });
</script>